<!-- ?xml version="1.0"?-->
<project name="TicTacToe" default="main" basedir=".">
	<description>
		A basic game of TicTacToe.
	</description>

    <!-- Sets variables which can later be used. -->
    <!-- The value of a property is accessed via ${} -->
    <property name="src.dir" location="src" />
    <property name="build.dir" location="build" />
    <property name="docs.dir" location="docs" />
    <property name="test.dir" location="${build.dir}/test-classes" />

    <!-- Add all the dependencies. -->
    <path id="classpath.base"></path>
	<path id="classpath.test">
        <pathelement location="./lib/junit-4.11.jar}"/>
        <pathelement location="${test.dir}"/>
        <pathelement location="${classes.dir}"/>
		<path refid="classpath.base"/>
<!--   
	    <fileset dir="${build.lib}">
        	<include name="**/*.class" />
        </fileset>
		-->
    </path>
        
    <!-- Deletes the existing build, docs and dist directory -->
    <target name="clean">
        <delete dir="${build.dir}" />
        <delete dir="${docs.dir}" />
    </target>
        
    <!-- Creates the  build, docs and dist directory -->
    <target name="makedir">
        <mkdir dir="build" />
        <mkdir dir="${build.dir}/test-classes" />
        <mkdir dir="docs" />
    </target>
        
	<target name="init">
		<!-- Create the time stamp -->
	<tstamp/>
	</target>

    <!-- Compiles the java code (including the usage of library for JUnit -->
    <target name="compile" depends="clean, makedir, init">
        <javac srcdir="${src.dir}" destdir="${build.dir}">
        </javac>
    </target>

	<target name="compile-test">
		<javac srcdir="${test.dir}" destdir="${build.dir}/test" debug="yes">
			<classpath refid="test.classpath" />
			<include name="**/**/*.java"/>
		</javac>
	</target>
        
    <!-- Creates Javadoc -->
    <target name="docs" depends="compile">
        <javadoc packagenames="src" sourcepath="${src.dir}" destdir="${docs.dir}">
            <!-- Define which files / directory should get included, we include all -->
            <fileset dir="${src.dir}">
                <include name="**" />
            </fileset>
        </javadoc>
    </target>
        

	<!-- Run the JUnit Tests -->
	<!-- Output is XML, could also be plain-->
	<target name="test" depends="compile-test">
		<junit printsummary="on" fork="false" haltonfailure="yes">
			<formatter type="xml" />
				<classpath>
					<pathelement location="${build.dir}/test-classes" />
				</classpath>
	       	<batchtest todir="${test.dir}" unless="hasFailingTests">
	           	<fileset dir="${test.dir}"> 
					<include name="**/*Test*.java" />
				</fileset>
	           	<formatter type="plain" usefile="false"/>
	       	</batchtest>
		</junit>
	</target>
    
    <target name="main" depends="compile, docs">
        <description> Main target </description>
    </target>
</project>



