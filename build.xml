<!--?xml version="1.0"?-->
<project name="TicTacToe" default="main" basedir=".">
	<description>
		A basic game of TicTacToe.
	</description>
    <!-- Sets variables which can later be used. -->
    <!-- The value of a property is accessed via ${} -->
    <property name="src" location="src" />
    <property name="build" location="build" />
    <property name="docs" location="docs" />
    <property name="test.dir" location="test" />

    <!-- Add all the dependencies. -->
    <path id="TicTacToe.classpath">
        <pathelement location="${build.classes}"/>
        <fileset dir="${build.lib}">
          <include name="**/*.class" />
        </fileset>
    </path>
        
    <!-- Deletes the existing build, docs and dist directory -->
    <target name="clean">
        <delete dir="${build}" />
        <delete dir="${docs}" />
    </target>
        
    <!-- Creates the  build, docs and dist directory -->
    <target name="makedir">
        <mkdir dir="build" />
        <mkdir dir="docs" />
    </target>
        
	<target name="init">
		<!-- Create the time stamp -->
	<tstamp/>
	</target>

    <!-- Compiles the java code (including the usage of library for JUnit -->
    <target name="compile" depends="clean, makedir, init">
        <javac srcdir="${src}" destdir="${build}">
        </javac>
            
    </target>
        
    <!-- Creates Javadoc -->
    <target name="docs" depends="compile">
        <javadoc packagenames="src" sourcepath="${src}" destdir="${docs}">
            <!-- Define which files / directory should get included, we include all -->
            <fileset dir="${src}">
                <include name="**" />
            </fileset>
        </javadoc>
    </target>
        

	<!-- Run the JUnit Tests -->
	<!-- Output is XML, could also be plain-->
	<target name="test" depends="compile">
		<junit printsummary="on" fork="false" haltonfailure="yes">
			<formatter type="xml" />
				<classpath>
					<pathelement location="${build}" />
				</classpath>
	       	<batchtest todir="${test.dir}" unless="hasFailingTests">
	           	<fileset dir="${test.dir}"> 
					<include name="**/*Test*.java" />
				</fileset>
	           	<formatter type="plain" usefile="false"/>
	       	</batchtest>
		</junit>
	</target>
    
    <target name="main" depends="compile, docs">
        <description> Main target </description>
    </target>
</project>



